---
import ShootingsLayout from "../../layouts/ShootingsLayout.astro";
import {getCollection, getEntry} from 'astro:content';
import EventCard from "../../components/models/EventCard";
const allShootings = await getCollection('shootings');
const cards: [EventCard] = allShootings.map(aPost => {
    return {slug: aPost.slug, ...aPost.data} as EventCard;
});
---
<ShootingsLayout>
    <main class="shootings-list">
        <!-- Assume events is the list of EventCard objects sorted by upcoming dates -->
        {cards.map(card =>
                <>
                    <div class="event-card">
                        <h2><a href={`/shootings/${card.slug}`}>{card.title}</a></h2>
                        <div class="event-details">
                            <p><strong>Tipo de Arma:</strong> {card.gunType}</p>
                            <p><strong>Fecha y Hora:</strong> {new Date(card.date).toLocaleString()}</p>
                            <p><strong>Ubicaci√≥n:</strong> {card.location}</p>
                            {card.url && <p><strong>Sitio Web:</strong> <a data-astro-prefetch href={card.url}
                                                                           target="_blank" rel="noopener noreferrer"
                                                                           class="url-link">{card.url}</a></p>}
                        </div>

                    </div>
                </>)}
    </main>
</ShootingsLayout>
<style>
    .shootings-list {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
    }

    .event-card {
        background-color: #23262d;
        color: white;
        padding: 20px;
        margin: 10px 0;
        border-radius: 10px;
        width: 80%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .event-card h2 a {
        color: rgb(var(--accent-light));
        text-decoration: none;
        border-bottom: 1px dashed rgba(var(--accent-light), 0.5);
    }

    .event-card h2 a:hover,
    .event-card h2 a:focus {
        text-decoration: underline;
    }

    .event-details {
        margin-top: 10px;
    }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: start;
        margin-top: 1.5rem;
    }

    .tag-chip {
        background-color: rgba(var(--accent-light), 0.2);
        border: 1px solid rgba(var(--accent-light), 0.5);
        border-radius: 15px;
        color: rgb(var(--accent-light));
        padding: 0.5rem 1rem;
        margin: 0.25rem;
        display: inline-block;
    }

    .telephone-link {
        color: rgb(var(--accent-light));
        text-decoration: none;
        border-bottom: 1px dashed rgba(var(--accent-light), 0.5);
    }

    .telephone-link:hover,
    .telephone-link:focus {
        text-decoration: underline;
    }

    .url-link {
        color: #2196F3; /* Blue color for URL links */
        text-decoration: none;
        border-bottom: 1px dashed rgba(33, 150, 243, 0.5);
    }

    .url-link:hover,
    .url-link:focus {
        text-decoration: underline;
    }
</style>
