---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Eventos de IPSC en España" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/global.css" />
		<title>{title}</title>
		<link rel="sitemap" href="/sitemap-index.xml"/>
		<meta property="og:title" content={title}/>
		<meta property="og:description" content="Portal de consulta de las tiradas de IPSC en España"/>
		<meta property="og:image" content="https://tiradas-ipsc.netlify.app/og_index.png"/>
		<meta property="og:url" content="https://tiradas-ipsc.netlify.app/"/>
		<meta property="og:type" content="website"/>

		<!-- Twitter Card Meta Tags (Optional) -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content="Portal de consulta de las tiradas de IPSC en España">
		<meta name="twitter:image" content="https://tiradas-ipsc.netlify.app/og_index.png">
	</head>
	<Header title="IPSC" subtitle="Eventos"/>
	<body>
		<slot />
	</body>
	<br><br>
<Footer/>
</html>


